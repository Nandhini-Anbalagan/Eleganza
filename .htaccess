RewriteEngine On
RewriteBase /
RewriteCond %{HTTPS} !=on
RewriteRule ^.*$ https://%{SERVER_NAME}%{REQUEST_URI} [R,L]

#Undermaintenance Block
#RewriteCond %{REMOTE_ADDR} !^123\.456\.789\.000
#RewriteCond %{REQUEST_URI} !/app/maintenance$ [NC]
#RewriteCond %{REQUEST_URI} !\.(jpe?g?|png|gif) [NC]
#RewriteRule .* /app/maintenance [R=302,L]

# Rewrite the url single invoice
RewriteRule ^payment/([^~,]+)/?$ new_payment.php?id=$1
RewriteRule ^paiement/([^~,]+)/?$ fr/paiement.php?id=$1

# Remove PHP Extension
RewriteCond %{ENV:REDIRECT_STATUS} ^$
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L]

# Error pages
ErrorDocument 404 https://eleganza.test/app/404

## EXPIRES CACHING ##
Header set Cache-Control "max-age=2592000, public"
<IfModule mod_expires.c>
ExpiresActive On
ExpiresByType image/jpg "access 1 month"
ExpiresByType image/jpeg "access 1 month"
ExpiresByType image/gif "access 1 month"
ExpiresByType image/png "access 1 month"
ExpiresByType text/css "access 1 month"
ExpiresByType text/html "access 1 month"
ExpiresByType application/pdf "access 1 month"
ExpiresByType text/x-javascript "access 1 month"
ExpiresByType application/x-shockwave-flash "access 1 month"
ExpiresByType image/x-icon "access 1 month"
ExpiresDefault "access 1 month"
</IfModule>
